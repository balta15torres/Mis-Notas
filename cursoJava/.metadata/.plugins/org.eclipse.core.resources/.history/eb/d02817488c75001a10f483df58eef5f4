import javax.swing.JOptionPane;

public class GameGuessTheNumber {

	public static void main(String[] args) {
		
		int number = (int)(Math.random()*20+1);
		String newNumber = Integer.toString(number);
		
		String checkNumber = "";
		int inputNumber = Integer.parseInt(checkNumber);
		
		int counter = 5; 
		
		while(checkNumber.equals(newNumber)==false ) {
			
			checkNumber = JOptionPane.showInputDialog("Juega, ¡SUERTE! \nIntroduce un número del 0 a 100 \nTe quedan " + counter + " intentos.");	
		
			if(counter == 0) {
				 
				System.out.println("Perdiste!! Hasta luego!!!");
			}
			
			if(inputNumber > number) {
				
				counter--;
				System.out.println("Sigue probando, el número a buscar es menor!! \nllevas " + counter + " intentos!");
				
			}
			if(inputNumber < number) {
				
				counter--;
				System.out.println("Sigue probando, el número a buscar es mayor!! \nllevas " + counter + " intentos!");
				
			}
			
			
		}
		
		System.out.println("Enorabuena!! Tu número es correcto");
		
	}

}
