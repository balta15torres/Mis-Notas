
public class StringMethods {

	public static void main(String[] args) {
		
		String name = "Baltasar";
		String surname = "Torres";
		
		System.out.println(name + " " + surname);

		System.out.println(name.length());
		
		Boolean result;
		
		result = name.equalsIgnoreCase(surname);
		
		System.out.println(result);
		
		//ultima letra de name 
		 int indexUltLetter = name.length();
		 char ultLetter = name.charAt(indexUltLetter-1);
		 
		 System.out.println(ultLetter);

		 //2primeras letras de surname
		 
		 System.out.println(surname.substring(0,2));
		 
		 //Todas las letras de surname menos primera y ultima
		 
		 int length = surname.length();
		 char firstLetter = surname.charAt(0);
		 char ultiLetter = surname.charAt(length-1);
		 
		 String resultado = surname.substring(firstLetter,ultiLetter);
		 
		 System.out.println(resultado);
		 
		
	}

}
