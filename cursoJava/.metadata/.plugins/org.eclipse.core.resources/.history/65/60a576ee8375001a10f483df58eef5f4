import javax.swing.*;

public class AccecsApp {

	public static void main(String[] args) {
		
		String user = "";
		user = JOptionPane.showInputDialog("REGISTRO: \nIntroduce nombre del usuario");
		
		String check = "";
		check = JOptionPane.showInputDialog("REGISTRO: \nIntroduce la contraseña");
		
		String name = "";
		
		while(user.equals(name) == false) {
			
			name = JOptionPane.showInputDialog("LOGIN: \nIntroduce nombre del usuario");
			
			if(check.equals(user) == false) {
				System.out.println("LOGIN: \nIntroduce nombre del usuario incorrecto");
			}
			
			System.out.println("LOGIN: \nNombre del usuario correcto, ahora vamos con la contraseña");
			
		}
		String password = "";
		
		while(check.equals(password) == false) {
			
			password = JOptionPane.showInputDialog("LOGIN: \nIntroduce la contraseña");
			
			if(check.equals(password) == false) {
				System.out.println("LOGIN: \nContraseña incorrecta");
			}
			
			System.out.println("LOGIN: \nContraseña correcta, Adelante!!!");
			
		}

	}

}
